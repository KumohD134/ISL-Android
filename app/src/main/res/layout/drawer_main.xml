<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/midnight_blue"
    android:layoutDirection="ltr"
    android:padding="@dimen/margin_15dp">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="@dimen/margin_5dp"
        android:gravity="center"
        android:text="로그인 해주세요"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/width_100dp"
        android:layout_height="@dimen/height_50dp"
        android:backgroundTint="@color/white"
        android:text="Login"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/txt_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_login" />

    <EditText
        android:id="@+id/editxt_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_50dp"
        android:backgroundTint="@color/light_blue"
        android:drawableLeft="@drawable/ic_search"
        android:hint="전체 검색"
        android:inputType="text"
        android:maxLength="100"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/light_blue"
        android:drawablePadding="@dimen/margin_5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login" />

</androidx.constraintlayout.widget.ConstraintLayout>
